@model Library.ViewModels.Emails.EditEmailTemplateViewModel

@{
    ViewData["Title"] = "Edit Email Template";
}

<div class="email-template-container">
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="From" class="required">From:</label>
            <input type="email" class="form-control" asp-for="From" required />
        </div>

        <div class="form-group">
            <label asp-for="Subject">Subject:</label>
            <input type="text" class="form-control" asp-for="Subject" />
        </div>

        <div class="form-group">
            <label asp-for="Body" class="required">Body:</label>
            <textarea id="tinyMceEditor" class="form-control" asp-for="Body" required>@Model.Body</textarea>
        </div>
        <div class="button-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        configureTinyMce();
    </script>
}