@model Library.ViewModels.Publishers.PublisherViewModel

<form asp-action="Edit" asp-controller="Publisher" method="post" id="editPublisherForm">
    <input asp-for="Id" type="hidden" />
    <div class="modal-field">
        <label asp-for="Name" class="required"></label>
        <input asp-for="Name" placeholder="Name" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="modal-field">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="modal-field">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <input asp-for="YearPublished" type="hidden" />
    <input asp-for="CreationDate" type="hidden" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}