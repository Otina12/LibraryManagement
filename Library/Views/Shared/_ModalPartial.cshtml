@model dynamic

<link rel="stylesheet" href="~/css//modal.css">

<div class="custom-modal" id="@Model.ModalId" tabindex="-1" role="dialog" aria-labelledby="@(Model.ModalId)Label" aria-hidden="true">
    <div class="custom-modal-dialog" role="document">
        <div class="custom-modal-content">
            <div class="custom-modal-header">
                <h4 class="custom-modal-title" id="modalTitle"></h4>
                <button type="button" class="custom-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="custom-modal-body" id="modalBody">
                <!-- body will be loaded here. It depends on action (create/edit/delete) -->
            </div>
            <div class="custom-modal-footer" id="modalFooter">
                <button type="submit" id="add-button" form="@Model.CreateFormId" class="btn btn-primary">Save</button>
                <button type="submit" id="edit-button" form="@Model.EditFormId" class="btn btn-primary">Edit</button>
                <button type="button" id="confirm-delete-button" class="btn btn-danger" style="display: none;">Delete</button>
                <button type="button" id="confirm-renew-button" class="btn btn-secondary" style="display: none;">Renew</button>

                <p style="position: absolute; left: 18%; transform: translateX(-50%); margin: 0; font-size: 15px;">
                    <span style="color: rgba(255, 0, 0, 0.8);">*</span> - Required Field
                </p>
            </div>
        </div>
    </div>
</div>