@model Library.ViewModels.Reports.PopularityReportViewModel

@{
    ViewBag.Title = "Generate Popularity Report";
}

<h2>Generate Popularity Report</h2>

<form asp-action="GeneratePopularityReport" method="get">
    <div class="form-group">
        <label asp-for="ModelName" class="control-label">Model Name</label>
        <select asp-for="ModelName" class="form-control">
            <option value="Author">Author</option>
            <option value="Publisher">Publisher</option>
            <option value="Book">Book</option>
            <option value="OriginalBook">OriginalBook</option>
            <option value="Genre">Genre</option>
            <option value="Customer">Customer</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>
