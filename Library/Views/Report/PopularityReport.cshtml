@model Library.Service.Dtos.Report.PopularityReportViewDto

@{
    string fileName = $"{Model.ModelName} Popularity Report '{Model.StartDate.Date:yyyy-MM-dd}' - '{Model.EndDate.Date:yyyy-MM-dd}'";
}

<div class="my-container">
    <h1>Popularity Report</h1>
    <p>Model: @Model.ModelName</p>
    <p>Report Period: @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Total Book Copies Reserved</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.TotalBookCopiesReserved</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Report" asp-action="ExportPopularityReport" asp-route-modelName="@Model.ModelName" asp-route-startDate="@Model.StartDate" asp-route-endDate="@Model.EndDate" class="btn btn-primary">Export to Excel</a>
</div>

@section Scripts {
    <script>
    </script>
}