@model Library.Service.Dtos.Report.PopularityReportViewDto

@{
    ViewData["Title"] = $"{Model.ModelName} Popularity Report";
}

<head>
    <link rel="stylesheet" href="~/css//report.css" />
</head>

<div class="my-container">
    <h1>Popularity Report</h1>
    <p>Model: @Model.ModelName</p>
    <p>Report Period: @Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Total Book Copies Reserved</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.TotalBookCopiesReserved</td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Report" asp-action="ExportExcelPopularityReport" asp-route-modelName="@Model.ModelName" asp-route-startDate="@Model.StartDate" asp-route-endDate="@Model.EndDate" class="btn btn-primary export-to-btn">Export to Excel</a>
    <a asp-controller="Report" asp-action="ExportPdfPopularityReport" asp-route-modelName="@Model.ModelName" asp-route-startDate="@Model.StartDate" asp-route-endDate="@Model.EndDate" class="btn btn-primary export-to-btn">Export to PDF</a>
</div>